<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.NoActionBar"
    tools:context=".ui.info.InfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        tools:ignore="UselessParent"
        android:background="#CFCECE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <Button
                    android:id="@+id/legend_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:text="@string/legend"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    app:backgroundTint="@color/purple_700" />

                <TextView
                    android:id="@+id/legend_tf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:padding="30dp"
                    android:text="@string/legend_text"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:visibility="gone"
                    tools:ignore="ObsoleteLayoutParam">
                </TextView>

                <Button
                    android:id="@+id/migraine_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_corners"
                    android:text="@string/migraine"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    app:backgroundTint="@color/blue" />

                <TextView
                    android:id="@+id/migraine_tf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:hyphenationFrequency="none"
                    android:justificationMode="inter_word"
                    android:padding="30dp"
                    android:text="@string/migraine_text"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:visibility="gone"
                    tools:ignore="ObsoleteLayoutParam" />

                <Button
                    android:id="@+id/tension_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_corners"
                    android:text="@string/tension"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:backgroundTint="@color/blue" />

                <TextView
                    android:id="@+id/tension_tf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hyphenationFrequency="none"
                    android:justificationMode="inter_word"
                    android:padding="30dp"
                    android:text="@string/tension_text"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/cluster_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_corners"
                    android:text="@string/cluster"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:backgroundTint="@color/blue" />

                <TextView
                    android:id="@+id/cluster_tf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hyphenationFrequency="none"
                    android:justificationMode="inter_word"
                    android:padding="30dp"
                    android:text="@string/cluster_text"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/sinus_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_corners"
                    android:text="@string/sinus"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:backgroundTint="@color/blue" />

                <TextView
                    android:id="@+id/sinus_tf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hyphenationFrequency="none"
                    android:justificationMode="inter_word"
                    android:padding="30dp"
                    android:text="@string/sinus_text"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/moreInfo_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_corners"
                    android:text="@string/more_info"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:backgroundTint="#3F51B5"/>

                <TextView
                    android:id="@+id/moreInfo_links"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="40dp"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text="@string/links"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorLink="#008EFF"
                    android:textSize="15sp"
                    android:visibility="gone"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
    </ScrollView>

</LinearLayout>