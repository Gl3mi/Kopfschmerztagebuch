<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entry"
        app:layout_constraintStart_toStartOf="@+id/bereich2"
        app:layout_constraintTop_toBottomOf="@+id/bereich2" />


    <EditText
        android:id="@+id/bereich"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:hint="HINT"
        app:layout_constraintTop_toBottomOf="@+id/btn"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="78dp" />

    <EditText
        android:id="@+id/bereich2"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:hint="HINT"
        app:layout_constraintTop_toBottomOf="@+id/bereich"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="78dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="258dp"
        android:layout_height="29dp"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toEndOf="@+id/test"
        app:layout_constraintTop_toBottomOf="@+id/bereich2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/symptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_centerInParent="true"
        android:drawablePadding="16dp"
        android:hint="@string/symptoms"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>